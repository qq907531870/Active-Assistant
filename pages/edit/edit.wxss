/*编辑部分的底部按钮*/
.userinfo-avatar {
  width: 120rpx;
  height: 120rpx;
  display: block;
  overflow: hidden;
  border-radius: 50%;
}
.btn-box{
  width: 100%;
  padding: 0 28rpx;
  margin-top: 80rpx;
  box-sizing: border-box;
}
.btn-sure {
  color: #fff;
   background-color: #4990E2; 

}
.m-b {
  margin-bottom: 40rpx;
}

.btn-sure-hover{
  background-color: #1E68BE;
}
.btn-remove{
  color: #4990E2;
  background-color: #fafafa;
  margin-bottom: 40rpx;
}
/*编辑布局通用部分*/
.item-cells{
    background-color: #fff;
    font-size: 32rpx;
    color: #666;
    margin-top: 20rpx;
}
.item-cells.no-top{margin-top: 0;}
.item-cell{
  padding: 30rpx 28rpx 30rpx 28rpx;
  display: flex;
}
.item-cell-textarea{
  padding:  0 28rpx 30rpx 28rpx;
}

.item-textarea{
  width: 100%;
  height: 50rpx;
  color: #999;
  font-size: 28rpx;
}
.item-textarea.big{
  height: 280rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
.item-textarea.bg{
  background-color: #fafafa;
}
.textarea-count{
  background-color: #fafafa;
  line-height: 1.4;
  text-align: right;
  padding: 0 20rpx 10rpx 0;
  color: #999;
}

.item-cell-bd{
  flex: 1;
}
.item-cell-ft{
  position: relative;
}
.item-cell.item-cell-input {padding: 22rpx 28rpx 22rpx 28rpx;}
.item-cell-input .item-cell-bd{
  height: 1.4rem;
  line-height: 1.4rem;
}
.item-cell-input input{
  width: 320rpx;
  height: auto;
  font-size: 32rpx;
  text-align: right; 
}
.item-cell.item-cell-image{
  padding: 12rpx 28rpx 12rpx 28rpx;
}
.item-cell-image .item-cell-bd{
  height: 100rpx;
  line-height: 100rpx;
}
.item-cell-image image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 120rpx;
}
.item-cell-access .item-cell-ft{
  padding-right: 10rpx;
  text-align: right;
}

